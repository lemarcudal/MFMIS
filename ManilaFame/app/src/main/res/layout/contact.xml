<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:src="@drawable/dti_citem"
            android:id="@+id/imageView1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Center for International Trade Expositions and Missions (CITEM)"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/textView1"
            android:layout_alignStart="@+id/imageView1"
            android:layout_marginTop="170dp"
            android:layout_alignEnd="@+id/imageView1" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="@string/citem_address"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="13dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:layout_alignStart="@+id/imageView1"
            android:layout_alignEnd="@+id/imageView1" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Exhibitor Team"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="(+63) 02 831 2201 local 242"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="13dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="11dp"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Buyer Team"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="25dp"
            android:layout_alignEnd="@+id/textView4" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="(+63) 02 831 2201 local 322"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textSize="13dp"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/custom_mf_logo"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</ScrollView>